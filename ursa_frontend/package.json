{
    "name": "ursa-frontend",
    "version": "0.0.1",
    "description": "",
    "type": "module",
    "scripts": {
        "test": "vitest",
        "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
        "start": "npm run test_menu",
        "tsc": "tsc --project tsconfig.json",
        "test_colony": "vite ./colony_root --config=vite.config.ts --base=/colony --mode test",
        "test_menu": "vite ./main_menu_root --config=vite.config.ts --base=/menu --mode test",
        "test_tutorial": "vite ./tutorial_root --config=vite.config.ts --base=/tutorial --mode test",
        "dev_colony": "vite ./colony_root --config=vite.config.ts --base=/colony --mode development",
        "dev_menu": "vite ./main_menu_root --config=vite.config.ts --base=/menu --mode development",
        "dev_tutorial": "vite ./tutorial_root --config=vite.config.ts --base=/tutorial --mode development",
        "prod_build_colony": "vite build --config=vite.config.ts ./colony_root --outDir=\"../../dist/colony\" --emptyOutDir --mode production",
        "prod_build_menu": "vite build --config=vite.config.ts ./main_menu_root --outDir=\"../../dist/menu\" --emptyOutDir --mode production",
        "prod_build_tutorial": "vite build --config=vite.config.ts ./tutorial_root --outDir=\"../../dist/tutorial\" --emptyOutDir --mode production",
        "prod_build_all": "npm run tsc && npm run prod_build_colony && npm run prod_build_menu && npm run prod_build_tutorial",
        "dev_build_colony": "vite build --config=vite.config.ts ./colony_root --outDir=\"../../dist/colony\" --emptyOutDir --mode development",
        "dev_build_menu": "vite build --config=vite.config.ts ./main_menu_root --outDir=\"../../dist/menu\" --emptyOutDir --mode development",
        "dev_build_tutorial": "vite build --config=vite.config.ts ./tutorial_root --outDir=\"../../dist/tutorial\" --emptyOutDir --mode development",
        "dev_build_all": "npm run tsc && npm run dev_build_colony && npm run dev_build_menu && npm run dev_build_tutorial"
    },
    "devDependencies": {
        "@solidjs/testing-library": "^0.8.10",
        "@testing-library/jest-dom": "^6.5.0",
        "@testing-library/user-event": "^14.5.2",
        "@types/node": "^22.5.4",
        "jsdom": "^25.0.1",
        "solid-devtools": "^0.30.1",
        "typescript": "^5.3.3",
        "vite": "^5.0.11",
        "vite-plugin-solid": "^2.8.2",
        "vitest": "^2.1.2"
    },
    "dependencies": {
        "@emotion/css": "^11.13.0",
        "prettier": "^3.3.3",
        "solid-js": "^1.9.1"
    }
}
