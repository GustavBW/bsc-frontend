{
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "types": ["vite/client", "@testing-library/jest-dom"],
        "noEmit": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@colony/*": ["colony_root/*"],
            "@tutorial/*": ["tutorial_root/*"],
            "@menu/*": ["main_menu_root/*"]
        },
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "colony_root/**/*",
        "tutorial_root/**/*",
        "main_menu_root/**/*"
    ]
}
